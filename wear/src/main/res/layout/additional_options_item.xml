<?xml version="1.0" encoding="utf-8"?>
<com.ni032mas.poti.AdditionalOptionsWearableListViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label_add_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey500"
        android:textSize="@dimen/big_font_size_label"/>

    <TextView
        android:id="@+id/tv_description_add_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/big_font_size_description"/>

</com.ni032mas.poti.AdditionalOptionsWearableListViewLayout>