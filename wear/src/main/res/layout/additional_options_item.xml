<?xml version="1.0" encoding="utf-8"?>
<com.ni032mas.poti.AdditionalOptionsWearableListViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_label_add_options"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Medium Text"
        android:textColor="@color/grey500" />

    <TextView
        android:id="@+id/tv_description_add_options"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Large Text"
        android:textColor="@color/black" />

</com.ni032mas.poti.AdditionalOptionsWearableListViewLayout>