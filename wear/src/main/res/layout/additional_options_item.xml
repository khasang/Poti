<?xml version="1.0" encoding="utf-8"?>
<io.khasang.poti.AdditionalOptionsWearableListViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/additional_options_layout_item">

    <TextView
        android:id="@+id/tv_label_add_options"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Vibration"
        android:textColor="@color/grey500" />

    <TextView
        android:id="@+id/tv_description_add_options"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Large Text"
        android:textColor="@color/black" />

</io.khasang.poti.AdditionalOptionsWearableListViewLayout>